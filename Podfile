platform :ios, '8.0'
use_frameworks!

target :Tinylog do
 	pod 'TTTAttributedLabel'
	pod 'Reachability'
	pod 'SVProgressHUD'
	pod 'PureLayout'
	pod 'Mixpanel'
	pod 'SGReachability'
	pod 'SGBackgroundView'
	pod "Ensembles", "~> 1.0"
	pod 'Fabric'
	pod 'Crashlytics'
end

target :TinylogTests do
  pod 'Specta', '~> 1.0'
  pod 'Expecta',     '~> 1.0'   # expecta matchers
  pod 'OCMock',      '~> 2.2'   # OCMock
  pod 'OCHamcrest',  '~> 3.0'   # hamcrest matchers
  pod 'OCMockito',   '~> 1.0'   # OCMock
  pod 'LRMocky',     '~> 0.9'   # LRMocky
end


